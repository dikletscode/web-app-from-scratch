// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model role{
  roleId Int @id @default(autoincrement())
  roleName String @unique 
  user user[]
}

model user{
  userId String @id @default(uuid())
  username String @unique
  email String @unique
  password String 
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  roleId Int
  role role @relation(fields: [roleId],references:[roleId])
  profile profile?
}

model profile{
  profileId Int @id @default(autoincrement())
  userId String
  fullname String? 
  address String?
  images String? @db.VarChar(300)
  noTelp String?
  sellerTerms forSeller?
  user user @relation(fields: [userId],references:[userId])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
model storeAddress{
  addressId Int @id @default(autoincrement())
  province String
  city String
  address String
  detailId Int
  etalase etalaseSeller[]
  detailSeller forSeller @relation(fields: [detailId],references:[detailId])
}

model forSeller{
  detailId Int @id @default(autoincrement())
  profile Int @unique
  sellerProfile profile @relation(fields: [profile],references:[profileId])
  noKtp String @db.Char(16)
  storeAdress storeAddress?
}

model etalaseSeller{
    id Int @id @default(autoincrement())
    productName String
    price Int
    addressId Int
    storeAddress storeAddress @relation(fields: [addressId],references:[addressId])
    total Int @default(0)
    star Int @db.TinyInt @default(0)
}

