// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model role{
  roleId Int @id @default(autoincrement())
  roleName String @unique 
  user user[]
}

model user{
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String 
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  roleId Int
  role role @relation(fields: [roleId],references:[roleId])
  profile profile?
}

model profile{
  id Int @id @default(autoincrement())
  userId String
  fullname String? 
  address String?
  images String? @db.VarChar(300)
  noTelp String?
  detailForSeller dataSeller?
  user user @relation(fields: [userId],references:[id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
model dataSeller{
  id Int @id @default(autoincrement())
  profileId Int @unique
  sellerProfile profile @relation(fields: [profileId],references:[id])
  noKtp String @db.Char(16)
  storeAdress storeInfo?
}

model storeInfo{
  id Int @id @default(autoincrement())
  nameStore String @unique
  province String
  city String
  address String
  sellerId Int
  etalase productSeller[]
  detailSeller dataSeller @relation(fields: [sellerId],references:[id])
}
model productSeller{
    id Int @id @default(autoincrement())
    productName String
    price Int
    storeId Int
    images String @db.VarChar(300)
    storeAddress storeInfo @relation(fields: [storeId],references:[id])
    total Int @default(0)
    star Int @db.TinyInt @default(0)
}



